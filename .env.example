# ── TalentPulse Environment ──────────────────────────────────────
# Copy to .env and adjust values

# Database
POSTGRES_USER=talentpulse
POSTGRES_PASSWORD=talentpulse_secret
POSTGRES_DB=talentpulse
DATABASE_URL=postgresql+asyncpg://talentpulse:talentpulse_secret@db:5432/talentpulse
DATABASE_URL_SYNC=postgresql://talentpulse:talentpulse_secret@db:5432/talentpulse

# API
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=change-me-in-production

# Ollama (local LLM)
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=60

# Demo mode (true = synthetic data, false = requires Graph)
DEMO_MODE=true

# Microsoft Graph (optional – metadata only, no content)
GRAPH_TENANT_ID=
GRAPH_CLIENT_ID=
GRAPH_CLIENT_SECRET=

# Privacy settings
DATA_RETENTION_DAYS=90
WORKING_HOURS_START=9
WORKING_HOURS_END=18
TIMEZONE=America/New_York

# Feature flags
ENABLE_GRAPH_INGESTION=false
ENABLE_BIAS_WARNINGS=true
